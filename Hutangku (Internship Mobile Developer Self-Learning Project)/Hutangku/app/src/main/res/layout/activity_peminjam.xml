<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="312dp"
                android:layout_height="162dp"
                android:layout_gravity="center"
                android:layout_below="@id/toolbar"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/card_background"
                app:cardCornerRadius="12dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:src="@drawable/ic_profile"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aryo Bhaskara"
                            android:fontFamily="@font/poppins_semibold"
                            android:textStyle="bold"
                            android:layout_margin="16dp"
                            android:layout_gravity="center"
                            android:textSize="16dp"
                            android:textColor="@color/colorPrimaryDark"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:text="Hutang"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:id="@+id/btn_hutang"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Uang Dipinjam"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:id="@+id/btn_dipinjam"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:layout_margin="10dp"
                app:cardCornerRadius="12dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:background="@drawable/card_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Limit Pinjam (Bulan ini)"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. 20.000.000"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="30dp"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="24dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#323B49"
                        android:layout_margin="24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Uang dipinjam (Bulan ini)"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. 2.000.000"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="30dp"
                        android:textColor="@color/LimeGreen"
                        android:layout_marginHorizontal="24dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <Button
                            android:layout_width="81dp"
                            android:layout_height="56dp"
                            android:background="@drawable/btn_background"
                            android:layout_marginLeft="24dp"
                            android:text="Bayar"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="16dp"/>

                        <Button
                            android:layout_width="180dp"
                            android:layout_height="56dp"
                            android:background="@drawable/btn_background"
                            android:layout_margin="24dp"
                            android:text="+ Ajukan Pinjaman"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="16dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="56dp"
                            android:layout_margin="16dp"
                            android:background="@drawable/btn_background"
                            android:drawableStart="@drawable/ic_notifications"
                            android:fontFamily="@font/poppins_semibold"
                            android:padding="16dp"
                            android:text="Kirim Notifikasi"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:drawablePadding="8dp"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="56dp"
                            android:background="@drawable/btn_background"
                            android:layout_margin="16dp"
                            android:text="Lihat Catatan"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="16dp"
                            android:padding="16dp"
                            android:drawableStart="@drawable/ic_note"
                            android:drawablePadding="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>